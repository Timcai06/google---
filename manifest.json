{
  "manifest_version": 3,

  "name": "单词翻译助手",

  "version": "1.0.0",

  "description": "翻译助手",

  "permissions": [
    "storage",   
    "activeTab"  
  ],

  "host_permissions": [
    "https://*.wikipedia.org/*",
    "https://*.zhihu.com/*",
    "https://*.blog.csdn.net/*",
    "https://*.medium.com/*",
    "https://*.dev.to/*",
    "https://*.stackoverflow.com/*",
    "https://*.github.io/*",
    "https://*.gitbook.io/*",
    "https://*.notion.site/*"
  ],

  "content_scripts": [
    {
      "matches": [
        "https://*.wikipedia.org/*",
        "https://*.zhihu.com/*",
        "https://*.blog.csdn.net/*",
        "https://*.medium.com/*",
        "https://*.dev.to/*",
        "https://*.stackoverflow.com/*",
        "https://*.github.io/*",
        "https://*.gitbook.io/*",
        "https://*.notion.site/*"
      ],       
      "js": ["content.js"],            
      "css": ["content.css"],          
      "run_at": "document_end"         
    }
  ],

  "action": {
    "default_popup": "popup.html"      
  },

  "background": {
    "service_worker": "background.js"   
  },

  "icons": {
    "16": "icon16.png"                  
  }
}

