{
  "manifest_version": 3,

  "name": "单词翻译助手",

  "version": "1.0.0",

  "description": "翻译助手",

  "permissions": [
    "storage",   
    "activeTab"  
  ],

  "host_permissions": [
    "http://*/*",   
    "https://*/*"   
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],       
      "js": ["content.js"],            
      "css": ["content.css"],          
      "run_at": "document_end"         
    }
  ],

  "action": {
    "default_popup": "popup.html"      
  },

  "background": {
    "service_worker": "background.js"   
  },

  "icons": {
    "16": "icon16.png"                  
  }
}

